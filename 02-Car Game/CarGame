command = ""
started = False
while True:
    command = input("> ").lower()
    if command == "start":
        if started:
            print("Car has already Started...")
        else:
            started = True
            print("Car has Started...")
    elif command == "stop":
        if not started:
            print("Car has already Stopped...")
        else:
            started = False
            print("Car has Stopped...")
    elif command == "help":
        print("""
Start - to start the car.
stop - to stop the car.
quit - to quit the game.
        """)
    elif command == "quit":
        break
    else:
        print("I don't understand!")
